<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/row_layout"
	android:background="#FFFFFF"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
     
     <ImageView
         android:id="@+id/row_pic"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_centerVertical="true"
         android:src="@drawable/mefb" />

     <TextView
         android:id="@+id/row_placename"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/row_placeaddress"
         android:layout_alignParentTop="true"
         android:paddingLeft="5dip"
         android:paddingTop="5dip"
         android:text="Friend Name"
         android:textColor="#000000"
         android:textSize="20sp"
         android:textStyle="bold" />

     <TextView
         android:id="@+id/row_placeaddress"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/row_placename"
         android:layout_marginLeft="15dp"
         android:layout_toRightOf="@+id/row_pic"
         android:padding="5dip"
         android:text="Location of where friend is"
         android:textColor="#000000"
         android:textSize="15sp" />
        
</RelativeLayout>
