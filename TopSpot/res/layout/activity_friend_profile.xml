<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FriendProfileActivity" >

    <TextView
        android:id="@+id/friendNametxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/startIMButton"
        android:layout_below="@+id/friendNametxt"
        android:layout_marginTop="18dp"
        android:text="Name of Person"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />

    <ImageButton
        android:id="@+id/startIMButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/meetupButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:background="@drawable/send_instant_message_button"
        android:src="@drawable/send_instant_message_button" />

    <ImageButton
        android:id="@+id/meetupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/startIMButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="69dp"
        android:background="@drawable/meetup_bttn"
        android:src="@drawable/meetup_bttn" />

    <TextView
        android:id="@+id/FriendLocationtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/startIMButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:text="Friend is at ..... Location"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/friendNametxt"
        android:layout_above="@+id/FriendLocationtxt"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/com_facebook_profile_default_icon" />

</RelativeLayout>